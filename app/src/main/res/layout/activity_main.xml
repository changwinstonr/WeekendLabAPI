<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="winston.weekendlab_api.MainActivity">

    <EditText
        android:id="@+id/scryEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:maxLength="6"
        android:textSize="16sp"
        android:maxLines="1"
        android:hint="Find your Magic number \n(1-410064)"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#a52a2a"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:text=""
        android:layout_below="@+id/scryEntry"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/scryImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"/>
    <!-- TODO: add accessibility to passed in cards for card attributes:
    Name, Mana Cost, Creature Type, Set, Abilities, Flavor text, Attack/Defense, & Artist name.
    android:contentDescription="@string/Ancestral_Recall"-->

    <!-- TODO: Once HTTP pull of images is functional enable PorgressBar for loading.
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/scryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />-->


</RelativeLayout>
